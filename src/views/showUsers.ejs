<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">Role</th>
            <th scope="col" colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach( function(data){ %>
            <tr>
                <th scope="row">
                    <%= data.id %>
                </th>
                <td>
                    <%= data.firstName %>
                </td>
                <td>
                    <%= data.lastName %>
                </td>
                <td>
                    <%= data.email %>
                </td>

                <!-- ///////////////////////// if else ejs /////////////////////////////////////////-->
                <% if (data.gender===0) { %>
                    <td>
                        Female
                    </td>
                <%} else { %>
                    <td>
                        Male
                    </td>
                <% } %>
                <!-- ////////////////////////////////////////////////////////////////////////////// -->


                <!-- ///////////////////////// if else ejs /////////////////////////////////////////-->
                <% if (data.roleId == 1) { %>
                    <td>
                        Admin
                    </td>
                <%} else if (data.roleId == 2){ %>
                    <td>
                        Doctor
                    </td>
                <%} else { %>
                    <td>
                        Patient
                    </td>
                <% } %>
                <!-- ////////////////////////////////////////////////////////////////////////////// -->
                <td>
                    <a class="btn btn-success p-2" type="button" href="/user/<%= data.id %>/formEdit">Edit</a>
                    <a class="btn btn-danger p-2" type="button" href="/user/<%= data.id %>/delete">Delete</a>
                </td>
            </tr>
            <% }); %>
    </tbody>
</table>